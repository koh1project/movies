{
  "extends": [
    "react-app",
    "react-app/jest",
    "next/core-web-vitals",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "newlines-between": "always-and-inside-groups",
        "pathGroups": [
          {
            "pattern": "react",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "next",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "~/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "~/**.css",
            "group": "sibling",
            "position": "after"
          }
        ],
        "distinctGroup": true
      }
    ]
  }
}
